<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="ScrollViewDemo.Controls.HMenuItemView">
	<ContentView.Content>
		<Grid WidthRequest="92" RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="37"></RowDefinition>
				<RowDefinition Height="3"></RowDefinition>
			</Grid.RowDefinitions>
			<Label x:Name="lblText" Text="Item" FontSize="14" TextColor="#3A3A3A" Grid.Row="0"
				HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
			</Label>
			<BoxView x:Name="bvBottom" Grid.Row="1"></BoxView>
			<Grid.GestureRecognizers>
				<TapGestureRecognizer Tapped="MenuItem_Tapped" />
			</Grid.GestureRecognizers>
		</Grid>
	</ContentView.Content>
</ContentView>
