<?xml version="1.0" encoding="UTF-8"?>
<ViewCell 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="ListViewDemo.Controls.ActorCell">
	<ViewCell.ContextActions>
    	<MenuItem Text="More" Clicked="OnMore_Click" />
        <MenuItem Text="Delete" Clicked="OnDelete_Click"
            IsDestructive="True" />
    </ViewCell.ContextActions>
	<StackLayout Orientation="Horizontal"
			VerticalOptions="Start">
		<Image x:Name="imgPhoto" Source="A0001.jpg" 
			HeightRequest="80"
			WidthRequest="80"/>
		<StackLayout Orientation="Vertical">
			<Label x:Name="lblName" Text="杏樹紗奈" 
				FontSize="22"/>
			<StackLayout Orientation="Horizontal"
				HorizontalOptions="StartAndExpand">
				<Label x:Name="lblSign" Text="山羊座"/>
				<Label x:Name="lblBloodType" Text="O型"/>
			</StackLayout >
		</StackLayout>
  	</StackLayout>
</ViewCell>
